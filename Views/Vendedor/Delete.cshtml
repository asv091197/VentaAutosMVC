@model VentaAutosMVC.Models.Vendedor

@{
    ViewBag.Title = "Delete Vendedor";
}

<h2>Are you sure you want to delete this vendedor?</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
        <p class="card-text">
            <strong>Apellido Paterno:</strong> @Html.DisplayFor(model => model.APP)<br />
            <strong>Apellido Materno:</strong> @Html.DisplayFor(model => model.APM)<br />
            <strong>Matricula:</strong> @Html.DisplayFor(model => model.Matricula)<br />
            <!-- Otros campos -->
        </p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
        }
    </div>
</div>
