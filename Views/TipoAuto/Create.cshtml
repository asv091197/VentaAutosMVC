@model VentaAutosMVC.Models.TipoAuto

<h2>Agregar Tipo de Auto</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Tipo de Auto</h3>
            </div>
            <div class="panel-body">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(t => t.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(t => t.Tipo, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el tipo de auto" } })
                        @Html.ValidationMessageFor(t => t.Tipo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
