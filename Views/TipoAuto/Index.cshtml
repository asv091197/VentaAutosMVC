@model IEnumerable<VentaAutosMVC.Models.TipoAuto>

<h2 class="mb-4">Marcas</h2>
<p>
    @Html.ActionLink("Crear Nueva Marca", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID_Tipo</td>
                <td>@item.Tipo</td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID_Tipo }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID_Tipo }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Tipo }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('¿Estás seguro de que deseas eliminar esta marca?');" })
                </td>
            </tr>
        }
    </tbody>
</table>