@model IEnumerable<VentaAutosMVC.Models.Direcciones>

@{
    ViewBag.Title = "Listado de Direcciones";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Listado de Direcciones</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Crear Nueva Dirección
        </a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Calle)</th>
                <th>@Html.DisplayNameFor(model => model.Numero)</th>
                <th>@Html.DisplayNameFor(model => model.Ciudad)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.CodigoPostal)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Calle)</td>
                    <td>@Html.DisplayFor(modelItem => item.Numero)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ciudad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.CodigoPostal)</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", new { id = item.ID_Direccion })" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a href="@Url.Action("Details", new { id = item.ID_Direccion })" class="btn btn-sm btn-info">
                            <i class="fas fa-info-circle"></i> Detalles
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.ID_Direccion })" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
