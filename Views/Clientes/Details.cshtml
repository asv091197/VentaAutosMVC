@model VentaAutosMVC.Models.Cliente

@{
    ViewBag.Title = "Detalles del Cliente";
}

<h2 class="text-center my-4">Detalles del Cliente</h2>

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Información Personal</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5><strong>@Html.DisplayNameFor(model => model.Nombre):</strong></h5>
                    <p>@Html.DisplayFor(model => model.Nombre)</p>
                </div>
                <div class="col-md-6">
                    <h5><strong>@Html.DisplayNameFor(model => model.APP):</strong></h5>
                    <p>@Html.DisplayFor(model => model.APP)</p>
                </div>
                <div class="col-md-6">
                    <h5><strong>@Html.DisplayNameFor(model => model.APM):</strong></h5>
                    <p>@Html.DisplayFor(model => model.APM)</p>
                </div>
                <div class="col-md-6">
                    <h5><strong>@Html.DisplayNameFor(model => model.RFC):</strong></h5>
                    <p>@Html.DisplayFor(model => model.RFC)</p>
                </div>
                <div class="col-md-6">
                    <h5><strong>@Html.DisplayNameFor(model => model.Email):</strong></h5>
                    <p>@Html.DisplayFor(model => model.Email)</p>
                </div>
                <div class="col-md-6">
                    <h5><strong>@Html.DisplayNameFor(model => model.Telefono):</strong></h5>
                    <p>@Html.DisplayFor(model => model.Telefono)</p>
                </div>
            </div>
        </div>

        <div class="card-header bg-secondary text-white">
            <h4 class="mb-0">Dirección</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5><strong>@Html.DisplayNameFor(model => model.Direcciones.Calle):</strong></h5>
                    <p>@Html.DisplayFor(model => model.Direcciones.Calle)</p>
                </div>
                <!-- Agregar más campos de dirección si los hay -->
            </div>
        </div>

        <div class="card-footer text-center">
            <a href="@Url.Action("Edit", "Cliente", new { id = Model.ID_Cliente })" class="btn btn-warning mx-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary mx-2">
                <i class="fas fa-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>

