@model VentaAutosMVC.Models.Cliente

@{
    ViewBag.Title = "Eliminar Cliente";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white text-center">
            <h3>¿Estás seguro de que deseas eliminar este cliente?</h3>
        </div>
        <div class="card-body">
            <h4 class="text-center">Cliente</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.APP)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.APP)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.APM)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.APM)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RFC)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RFC)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Direcciones.Calle)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Direcciones.Calle)
                </dd>
            </dl>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card-footer text-center">
                <button type="submit" class="btn btn-danger mx-2">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary mx-2" })
            </div>
        }
    </div>
</div>
