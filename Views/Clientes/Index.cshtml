@model IEnumerable<VentaAutosMVC.Models.Cliente>

@{
    ViewBag.Title = "Listado de Clientes";
}

<div class="container mt-5">
    <h2 class="mb-4">Listado de Clientes</h2>

    <p>
        @Html.ActionLink("Crear Nuevo Cliente", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.APP)</th>
                    <th>@Html.DisplayNameFor(model => model.APM)</th>
                    <th>@Html.DisplayNameFor(model => model.RFC)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>@Html.DisplayNameFor(model => model.Direcciones.Calle)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.APP)</td>
                        <td>@Html.DisplayFor(modelItem => item.APM)</td>
                        <td>@Html.DisplayFor(modelItem => item.RFC)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direcciones.Calle)</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.ID_Cliente })" class="btn btn-sm btn-warning me-1">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a href="@Url.Action("Details", new { id = item.ID_Cliente })" class="btn btn-sm btn-info me-1">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.ID_Cliente })" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Enlace para cargar los íconos de FontAwesome -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
